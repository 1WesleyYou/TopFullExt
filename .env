# ===== Cluster Topology =====
MASTER_NODE=node0
WORKER_NODE=node1
LOADGEN_NODE=node2

MASTER_IP=10.10.1.1
WORKER_IP=10.10.1.2
LOADGEN_IP=10.10.1.3

# ===== Common Paths =====
PROJECT_NAME=TopFullExt
PROJECT_ROOT=${HOME}/${PROJECT_NAME}
PROJECT_ROOT_HOME=${PROJECT_ROOT}

TOPFULL_MASTER_DIR=${PROJECT_ROOT}/TopFull_master
TOPFULL_LOADGEN_DIR=${PROJECT_ROOT}/TopFull_loadgen
TOPFULL_SRC_DIR=${TOPFULL_MASTER_DIR}/online_boutique_scripts/src
TOPFULL_PROXY_DIR=${TOPFULL_SRC_DIR}/proxy
TOPFULL_DEPLOY_DIR=${TOPFULL_MASTER_DIR}/online_boutique_scripts/deployments

# ===== Runtime Endpoints =====
PROXY_PORT=8090
FRONTEND_NODEPORT=30440

PROXY_URL=http://${MASTER_IP}:${PROXY_PORT}
FRONTEND_URL=${MASTER_IP}:${FRONTEND_NODEPORT}
LOCUST_URL=http://${LOADGEN_IP}

# Number of Locust stat endpoints, used by global_config.json (locust_port)
LOCUST_PORT_COUNT=43
LOCUST_BASE_PORT=8888

# ===== Experiment Config =====
MICROSERVICE_CODE=online_boutique
MICROSERVICE_CONFIG=${TOPFULL_SRC_DIR}/config/online_boutique.json
GLOBAL_CONFIG_PATH=${TOPFULL_SRC_DIR}/global_config.json
RECORD_PATH=${TOPFULL_SRC_DIR}/logs/
NUM_INSTANCE_PATH=${TOPFULL_SRC_DIR}/logs/num_instances.csv

# If you have an RL checkpoint, set it here; otherwise keep empty for now.
# Example: ${TOPFULL_SRC_DIR}/checkpoint_000701
CHECKPOINT_PATH=

# ===== Time Sync (Chrony/NTP) =====
# Recommendation:
# - Use master as NTP source inside this small cluster.
# - node0 can use public pool by default and serve node1/node2.
TIME_SYNC_TOOL=chrony
TIMEZONE=UTC
NTP_SERVER_FOR_WORKER=${MASTER_IP}
NTP_SERVER_FOR_LOADGEN=${MASTER_IP}
